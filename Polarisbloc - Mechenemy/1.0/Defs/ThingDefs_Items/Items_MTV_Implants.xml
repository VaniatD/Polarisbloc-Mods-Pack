    <graphicData>
      <texPath>Vanya/Things/Item/Vanya_ConsciousnessCube</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>3000</MarketValue>
      <Mass>0.08</Mass>
    </statBases>
    <techHediffsTags>
      <li>MTVImplant</li>
    </techHediffsTags>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>1</glowRadius>
        <glowColor>(255,51,204,0)</glowColor>
      </li>
    </comps>
