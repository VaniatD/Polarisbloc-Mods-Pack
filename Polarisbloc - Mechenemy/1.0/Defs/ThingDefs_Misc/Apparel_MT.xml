<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="ApparelBase_MTV" Abstract="True">
    <thingClass>Apparel</thingClass>
    <techLevel>Ultra</techLevel>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <Beauty>0</Beauty>
      <SellPriceFactor>0.6</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <tradeability>Sellable</tradeability>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>
  <ThingDef ParentName="ApparelBase_MTV">
    <defName>Vanya_HunterOnSkin</defName>
    <label>chaser uniform</label>
    <description>Chaser armada's special uniform, can keep your pawn warm.</description>
    <graphicData>
      <texPath>Vanya/Things/Pawn/Humanlike/Vanya_HunterOnSkin</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MarketValue>1000</MarketValue>
      <Mass>1</Mass>
      <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <ArmorRating_Heat>0.25</ArmorRating_Heat>
      <Insulation_Cold>30</Insulation_Cold>
      <Insulation_Heat>30</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>UpperHead</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Vanya/Things/Pawn/Humanlike/Vanya_HunterOnSkin</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>MTVCAapparel</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <equippedStatOffsets>
      <MoveSpeed>0.6</MoveSpeed>
      <AimingDelayFactor>-0.1</AimingDelayFactor>
      <Flammability>-1</Flammability>
    </equippedStatOffsets>
    <generateCommonality>1</generateCommonality>
    <smeltable>false</smeltable>
  </ThingDef>
  <!--Armor-->
  <ThingDef ParentName="ApparelBase_MTV">
    <defName>Vanya_HunterArmor</defName>
    <label>chaser armor</label>
    <description>Chaser armada's common armor, can defend any kind of attack.</description>
    <graphicData>
      <texPath>Vanya/Things/Pawn/Humanlike/Vanya_HunterArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>2800</MarketValue>
      <MaxHitPoints>450</MaxHitPoints>
      <Mass>15</Mass>
      <ArmorRating_Blunt>1.20</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
      <ArmorRating_Heat>0.67</ArmorRating_Heat>
      <Insulation_Cold>50</Insulation_Cold>
      <Insulation_Heat>50</Insulation_Heat>
      <SellPriceFactor>0.4</SellPriceFactor>
      <EquipDelay>12</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>FullHead</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Neck</li>
      </bodyPartGroups>
      <wornGraphicPath>Vanya/Things/Pawn/Humanlike/Vanya_HunterArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>MTVCAapparel</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <equippedStatOffsets>
      <PsychicSensitivity>-1</PsychicSensitivity>
      <WorkSpeedGlobal>-0.3</WorkSpeedGlobal>
      <ShootingAccuracyPawn>2</ShootingAccuracyPawn>
      <MeleeHitChance>5</MeleeHitChance>
      <MeleeDodgeChance>0.3</MeleeDodgeChance>
    </equippedStatOffsets>
    <generateCommonality>1</generateCommonality>
    <smeltable>false</smeltable>
  </ThingDef>
</Defs>