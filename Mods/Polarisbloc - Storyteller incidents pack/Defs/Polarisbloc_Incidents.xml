    <baseChance>3</baseChance>
    <minRefireDays>28</minRefireDays>
    <category>ThreatSmall</category>
    <letterLabel>power conduit fusing</letterLabel>
    <letterText>Some of your power conduit has been fused out because of the large current in your power grid.</letterText>
    <letterDef>ThreatSmall</letterDef>
  </IncidentDef>
