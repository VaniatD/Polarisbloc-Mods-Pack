<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <IncidentDef>
    <defName>Polaris_TradeShipCrash</defName>
    <label>Trade ship crash</label>
    <targetTags>
      <li>Map_PlayerHome</li>
    </targetTags>
    <workerClass>Polarisbloc_Incidents.IncidentWorker_TradeShipPodCrash</workerClass>
    <baseChance>0.45</baseChance>
    <minRefireDays>120</minRefireDays>
    <category>Misc</category>
    <earliestDay>60</earliestDay>
  </IncidentDef>
  <IncidentDef>
    <defName>Polaris_QuestTradeShipPodCrash</defName>
    <label>Trade ship crash quest</label>
    <category>WorldQuest</category>
    <targetTags>
      <li>World</li>
    </targetTags>
    <workerClass>Polarisbloc_Incidents.IncidentWorker_QuestTradeShipPodCrash</workerClass>
    <letterLabel>trade ship crash quest</letterLabel>
    <letterText>{0}, {1} of {2}, has informed us of a trade ship crashed not far from us.We can go there to get the cargo hold of the ship.\n\nThe trade ship is {3}\n\nUnfortunately, it won’t last - others will take the items in {4} days if we don't.\n\nBeware - valuables tend to attract danger. {5}</letterText>
    <letterDef>PositiveEvent</letterDef>
    <baseChance>0.4</baseChance>
    <minRefireDays>20</minRefireDays>
  </IncidentDef>
  <IncidentDef>
    <defName>Polaris_HarvestBenediction</defName>
    <label>Demeter's Blessing</label>
    <targetTags>
      <li>Map_PlayerHome</li>
    </targetTags>
    <workerClass>Polarisbloc_Incidents.IncidentWorker_HarvestBenediction</workerClass>
    <baseChance>0.4</baseChance>
    <minRefireDays>35</minRefireDays>
    <category>Misc</category>
    <letterLabel>Demeter's Blessing</letterLabel>
    <letterText>Thanks to the blessings of the unknown, your crop has gained a lot of vitality.</letterText>
  </IncidentDef>
  <IncidentDef>
    <defName>Polaris_TurretDisturbed</defName>
