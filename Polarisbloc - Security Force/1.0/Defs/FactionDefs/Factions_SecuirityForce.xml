<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef>
    <defName>Polaribloc_SecuirityForce</defName>
    <label>Security Force</label>
    <description>The security forces belonging to the Polarisbloc provide security support for the Polarisbloc. At the same time, it is also ordered by Polarisbloc to carry out the untold task.</description>
    <pawnSingular>Soldier</pawnSingular>
    <pawnsPlural>Soldiers</pawnsPlural>
    <settlementGenerationWeight>0.24</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Commander</leaderTitle>
    <fixedName>Security Force</fixedName>
    <expandingIconTexture>PolarisblocSF/World/SFIcon</expandingIconTexture>
    <colorSpectrum>
      <!--<li>(0.2, 0.8, 0.6)</li>-->
      <li>(1, 1, 1)</li>
    </colorSpectrum>
    <startingGoodwill>
      <min>-10</min>
      <max>40</max>
    </startingGoodwill>
    <naturalColonyGoodwill>
      <min>0</min>
      <max>99</max>
    </naturalColonyGoodwill>
    <techLevel>Ultra</techLevel>
    <geneticVariance>0.8</geneticVariance>
    <hairTags>
      <li>Urban</li>
    </hairTags>
    <visitorTraderKinds>
      <li>Visitor_SecuirityForce_Standard</li>
    </visitorTraderKinds>
    <caravanTraderKinds>
      <li>Caravan_SecuirityForce_BulkGoods</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_SecuirityForce</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-80</min>
      <max>110</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,150)</li>
        <li>(700, 150)</li>
        <li>(1300, 200)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Polarisbloc_SFSoldier>100</Polarisbloc_SFSoldier>
          <Polarisbloc_SFCaptain>10</Polarisbloc_SFCaptain>
          <Polarisbloc_SFCommander>1</Polarisbloc_SFCommander>
        </options>
      </li>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <Polarisbloc_SFSoldier>100</Polarisbloc_SFSoldier>
          <Polarisbloc_SFCaptain>10</Polarisbloc_SFCaptain>
          <Polarisbloc_SFCommander>1</Polarisbloc_SFCommander>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Polarisbloc_SFCaptain>1</Polarisbloc_SFCaptain>
        </traders>
        <carriers>
          <Muffalo>1</Muffalo>
          <Dromedary>1</Dromedary>
        </carriers>
        <guards>
          <Polarisbloc_SFSoldier>50</Polarisbloc_SFSoldier>
          <Polarisbloc_SFCaptain>10</Polarisbloc_SFCaptain>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Polarisbloc_SFSoldier>200</Polarisbloc_SFSoldier>
          <Polarisbloc_SFCaptain>120</Polarisbloc_SFCaptain>
          <Polarisbloc_SFCommander>50</Polarisbloc_SFCommander>
        </options>
      </li>
    </pawnGroupMakers>
    <homeIconPath>World/WorldObjects/DefaultSettlement</homeIconPath>
    <autoFlee>false</autoFlee>
    <earliestRaidDays>60</earliestRaidDays>
    <rescueesCanJoin>true</rescueesCanJoin>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(1000, 0)</li>
        <li>(4000, 1)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <backstoryCategories>
      <li>Raid</li>
    </backstoryCategories>
    <goodwillDailyGain>0.40</goodwillDailyGain>
    <goodwillDailyFall>0.30</goodwillDailyFall>
  </FactionDef>
</Defs>