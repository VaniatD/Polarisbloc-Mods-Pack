<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Abstract="True" Name="PolarisblocBaseWeapon">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>true</alwaysHaulable>
    <tickerType>Never</tickerType>
    <equipmentType>Primary</equipmentType>
    <useHitPoints>true</useHitPoints>
    <pathCost>10</pathCost>
    <selectable>true</selectable>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <Beauty>3</Beauty>
      <SellPriceFactor>0.22</SellPriceFactor>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompEquippable</compClass>
      </li>
    </comps>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
  </ThingDef>
  <ThingDef Name="PolarisblocBaseGun" Abstract="True" ParentName="PolarisblocBaseWeapon">
    <techLevel>Industrial</techLevel>
    <smeltable>false</smeltable>
    <thingCategories>
      <li>WeaponsRanged</li>
    </thingCategories>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <tradeability>Sellable</tradeability>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>
  <ThingDef Name="PolarisblocBaseBullet" Abstract="True">
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Projectile</altitudeLayer>
    <thingClass>Polarisbloc_SecurityForce.CaniculaBullet</thingClass>
    <label>bullet</label>
    <useHitPoints>False</useHitPoints>
    <neverMultiSelect>True</neverMultiSelect>
    <graphicData>
      <shaderType>Transparent</shaderType>
    </graphicData>
  </ThingDef>
  <!--CaniculaRifle-->
  <ThingDef ParentName="PolarisblocBaseBullet">
    <defName>Bullet_CaniculaRifle</defName>
    <label>charge shot</label>
    <graphicData>
      <texPath>PolarisblocSF/Projectile/Bullet_CaniculaRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>4</damageAmountBase>
      <speed>105</speed>
      <armorPenetrationBase>0.8</armorPenetrationBase>
      <stoppingPower>0.9</stoppingPower>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="PolarisblocBaseGun">
    <defName>Polarisbloc_CaniculaRifle</defName>
    <label>canicula - II universal rifle</label>
    <description>A universal rifle produced by Polarisbloc,the specially treated energy release device can shoot bullets that are extremely threatening to the life body.</description>
    <graphicData>
      <texPath>PolarisblocSF/Weapon/CaniculaRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>2.7</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.83</AccuracyShort>
      <AccuracyMedium>0.68</AccuracyMedium>
      <AccuracyLong>0.53</AccuracyLong>
      <RangedWeapon_Cooldown>0.75</RangedWeapon_Cooldown>
      <MarketValue>1400</MarketValue>
      <Flammability>0.4</Flammability>
    </statBases>
    <techLevel>Ultra</techLevel>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <weaponTags>
      <li>Polarisbloc_CaniculaRifle</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_CaniculaRifle</defaultProjectile>
        <warmupTime>2</warmupTime>
        <range>36</range>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <burstShotCount>4</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
        <armorPenetration>0.8</armorPenetration>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
        <armorPenetration>0.8</armorPenetration>
      </li>
    </tools>
  </ThingDef>
  <!--CaniculaSniper-->
  <ThingDef ParentName="PolarisblocBaseBullet">
    <defName>Bullet_CaniculaSniper</defName>
    <label>charge shot</label>
    <graphicData>
      <texPath>PolarisblocSF/Projectile/Bullet_CaniculaSniper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>9</damageAmountBase>
      <speed>190</speed>
      <armorPenetrationBase>1.20</armorPenetrationBase>
      <stoppingPower>2</stoppingPower>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="PolarisblocBaseGun">
    <defName>Polarisbloc_CaniculaSniper</defName>
    <label>canicula - III sniper rifle</label>
    <description>A sniper rifle produced by Polarisbloc,the specially treated energy release device can shoot bullets that are extremely threatening to the life body.</description>
    <graphicData>
      <texPath>PolarisblocSF/Weapon/CaniculaSniper</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>3.3</Mass>
      <AccuracyTouch>0.6</AccuracyTouch>
      <AccuracyShort>0.8</AccuracyShort>
      <AccuracyMedium>0.92</AccuracyMedium>
      <AccuracyLong>0.88</AccuracyLong>
      <RangedWeapon_Cooldown>1.17</RangedWeapon_Cooldown>
      <MarketValue>1800</MarketValue>
      <Flammability>0.4</Flammability>
    </statBases>
    <techLevel>Ultra</techLevel>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <weaponTags>
      <li>Polarisbloc_CaniculaSniper</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_CaniculaSniper</defaultProjectile>
        <warmupTime>3.9</warmupTime>
        <range>54</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>ChargeLance_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.8</cooldownTime>
        <armorPenetration>0.8</armorPenetration>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
        <armorPenetration>0.8</armorPenetration>
      </li>
    </tools>
    <equippedAngleOffset>47</equippedAngleOffset>
  </ThingDef>
</Defs>