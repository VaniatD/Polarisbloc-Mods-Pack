        <li>OnSkin</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <tags>
        <li>PolarisSFApparel</li>
        <li>RoyalCombatGear</li>
      </tags>
    </apparel>
