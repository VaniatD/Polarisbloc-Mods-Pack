<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="PolarisblocApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Flammability>0.6</Flammability>
      <DeteriorationRate>0.2</DeteriorationRate>
      <Beauty>0</Beauty>
      <SellPriceFactor>0.70</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Biocodable" />
      <!--<li><compClass>CompColorable</compClass></li>-->
      <li Class="CompProperties_Styleable"></li>
    </comps>
    <tradeability>Sellable</tradeability>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <smeltable>false</smeltable>
  </ThingDef>
  <ThingDef ParentName="PolarisblocApparelBase">
    <defName>Apparel_PolarisShieldBelt_IV</defName>
    <label>polaris - IV shield belt</label>
    <description>The latest generation of shield from the Polarisbloc, only for important personnel.\n\nThe shield will counter attack the attacker if the wearer is attacked. Although the counterattack have a cooling time, be careful, the counterattack is very precise.</description>
    <thingClass>Polarisbloc_SecurityForce.PolarisShieldBelt_IV</thingClass>
    <graphicData>
      <texPath>PolarisblocSF/Apparel/PolarisShieldBelt_IV</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tickerType>Normal</tickerType>
    <statBases>
      <Mass>2.4</Mass>
      <EnergyShieldRechargeRate>0.18</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>1.2</EnergyShieldEnergyMax>
      <MarketValue>2000</MarketValue>
      <MaxHitPoints>240</MaxHitPoints>
      <Flammability>0</Flammability>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <tags>
        <li>PolarisSFApparel</li>
      </tags>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
    </apparel>
    <generateCommonality>0.4</generateCommonality>
  </ThingDef>
  <ThingDef ParentName="PolarisblocApparelBase">
    <defName>Polarisbloc_CygnusStandardArmor</defName>
    <label>cygnus standard armor</label>
    <description>The standard Cygnus armor of Security Forces provides a small amount of defensive capabilities and combat attributes.</description>
    <thingClass>Polarisbloc_SecurityForce.CygnusStandardArmor</thingClass>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <texPath>PolarisblocSF/Apparel/CygnusStandardArmor/CygnusStandardArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>8</Mass>
      <DeteriorationRate>0</DeteriorationRate>
      <MaxHitPoints>300</MaxHitPoints>
      <MarketValue>1500</MarketValue>
      <ArmorRating_Blunt>0.18</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
      <ArmorRating_Heat>0.2</ArmorRating_Heat>
      <Insulation_Cold>45</Insulation_Cold>
      <Insulation_Heat>45</Insulation_Heat>
      <Flammability>0.5</Flammability>
      <Beauty>6</Beauty>
      <EquipDelay>8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>1</MoveSpeed>
      <Flammability>-0.25</Flammability>
      <MeleeDodgeChance>2</MeleeDodgeChance>
    </equippedStatOffsets>
    <generateCommonality>0.4</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>PolarisblocSF/Apparel/CygnusStandardArmor/CygnusStandardArmor</wornGraphicPath>
      <layers>
        <!--<li>OnSkin</li>-->
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <tags>
        <li>PolarisSFApparel</li>
        <li>RoyalCombatGear</li>
      </tags>
    </apparel>
  </ThingDef>
