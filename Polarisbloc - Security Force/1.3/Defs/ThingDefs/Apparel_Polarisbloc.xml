  <ThingDef ParentName="PolarisblocApparelBase">
    <defName>Polarisbloc_CygnusStandardTights</defName>
    <label>cygnus standard tights</label>
    <description>The Cygnus tights made of polymer materials contain special life-sustaining devices that can treat the user's wounds in time and promote wound healing.</description>
    <thingClass>Polarisbloc_SecurityForce.CygnusStandardTights</thingClass>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <texPath>PolarisblocSF/Apparel/CygnusStandardTights/CygnusStandardTights</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <Mass>1.3</Mass>
      <DeteriorationRate>0</DeteriorationRate>
      <MaxHitPoints>200</MaxHitPoints>
      <MarketValue>1000</MarketValue>
      <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.15</ArmorRating_Sharp>
      <ArmorRating_Heat>0.1</ArmorRating_Heat>
      <Insulation_Cold>45</Insulation_Cold>
      <Insulation_Heat>25</Insulation_Heat>
      <Flammability>0.4</Flammability>
      <Beauty>6</Beauty>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <Flammability>-0.75</Flammability>
      <ToxicSensitivity>-0.8</ToxicSensitivity>
    </equippedStatOffsets>
    <generateCommonality>0.4</generateCommonality>
    <apparel>
      <wearPerDay>0</wearPerDay>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
