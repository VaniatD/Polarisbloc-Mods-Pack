<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef>
    <defName>Polaribloc_SecuirityForce</defName>
    <label>Security Force</label>
    <description>The Security Force, associated with the Polarisbloc, provide security support for the Polarisbloc. At the same time, it is also ordered by Polarisbloc to carry out the untold task.</description>
    <pawnSingular>Soldier</pawnSingular>
    <pawnsPlural>Soldiers</pawnsPlural>
    <categoryTag>Outlander</categoryTag>
    <settlementGenerationWeight>0.24</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Commander</leaderTitle>
    <fixedName>Security Force</fixedName>
    <techLevel>Ultra</techLevel>
    <colorSpectrum>
      <li>(1, 1, 1)</li>
    </colorSpectrum>
    <geneticVariance>0.8</geneticVariance>
    <visitorTraderKinds>
      <li>Visitor_SecuirityForce_Standard</li>
    </visitorTraderKinds>
    <caravanTraderKinds>
      <li>Caravan_SecuirityForce_BulkGoods</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_SecuirityForce</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-80~110</allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,150)</li>
        <li>(700, 150)</li>
        <li>(1300, 200)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Polarisbloc_SFSoldier>100</Polarisbloc_SFSoldier>
          <Polarisbloc_SFCaptain>10</Polarisbloc_SFCaptain>
          <Polarisbloc_SFCommander>1</Polarisbloc_SFCommander>
        </options>
      </li>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <Polarisbloc_SFSoldier>100</Polarisbloc_SFSoldier>
          <Polarisbloc_SFCaptain>10</Polarisbloc_SFCaptain>
          <Polarisbloc_SFCommander>1</Polarisbloc_SFCommander>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Polarisbloc_SFCaptain>1</Polarisbloc_SFCaptain>
        </traders>
        <carriers>
          <Muffalo>1</Muffalo>
          <Dromedary>1</Dromedary>
        </carriers>
        <guards>
          <Polarisbloc_SFSoldier>50</Polarisbloc_SFSoldier>
          <Polarisbloc_SFCaptain>10</Polarisbloc_SFCaptain>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Polarisbloc_SFSoldier>200</Polarisbloc_SFSoldier>
          <Polarisbloc_SFCaptain>120</Polarisbloc_SFCaptain>
          <Polarisbloc_SFCommander>50</Polarisbloc_SFCommander>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <autoFlee>false</autoFlee>
    <earliestRaidDays>90</earliestRaidDays>
    <rescueesCanJoin>true</rescueesCanJoin>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(1000, 0)</li>
        <li>(4000, 1)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <factionIconPath>PolarisblocSF/World/SFIcon</factionIconPath>
    <backstoryFilters>
      <li>
        <categories>
          <li>Pirate</li>
        </categories>
      </li>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
        <commonality>0.5</commonality>
      </li>
    </backstoryFilters>
    <structureMemeWeights>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
      <Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Archist>
      <Structure_Animist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Animist>
    </structureMemeWeights>
    <raidLootValueFromPointsCurve>
      <points>
        <li>(35,     30)</li>
        <li>(100,   180)</li>
        <li>(1000, 800)</li>
        <li>(2000, 1500)</li>
        <li>(4000, 2000)</li>
      </points>
    </raidLootValueFromPointsCurve>
    <configurationListOrderPriority>65</configurationListOrderPriority>
    <raidLootMaker>Polaribloc_SecuirityForceLootMaker</raidLootMaker>
    <maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <disallowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
    </disallowedMemes>
    <requiredMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Transhumanist</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">HumanPrimacy</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Collectivist</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Guilty</li>
    </requiredMemes>
    <allowedCultures>
      <li>Astropolitan</li>
    </allowedCultures>
    <disallowedPrecepts>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Female_CoveringAnythingButGroinDisapproved</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Female_Mandatory</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Male_CoveringAnythingButGroinDisapproved</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Male_Mandatory</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibalism_RequiredStrong</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibalism_RequiredRavenous</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibalism_Preferred</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Cannibalism_Acceptable</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">OrganUse_Acceptable</li>
    </disallowedPrecepts>
  </FactionDef>
  <ThingSetMakerDef>
    <defName>Polaribloc_SecuirityForceLootMaker</defName>
    <root Class="ThingSetMaker_MarketValue">
      <fixedParams>
        <filter>
          <thingDefs>
            <li>Gold</li>
            <li>MedicineUltratech</li>
            <li>Uranium</li>
            <li>Polarisbloc_EmergencyFood</li>
            <li>PolarisHealingPotion</li>
          </thingDefs>
        </filter>
      </fixedParams>
    </root>
  </ThingSetMakerDef>
</Defs>